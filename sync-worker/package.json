{
  "name": "@mirubato/sync-worker",
  "version": "1.7.6",
  "description": "Mirubato WebSocket sync service built on Cloudflare Workers + Durable Objects",
  "main": "src/index.ts",
  "scripts": {
    "build": "echo 'Build handled by Wrangler - no separate build step needed'",
    "dev": "wrangler dev --env local --port 8787 --local-protocol http",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "deploy": "wrangler deploy --env production",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet\""
  },
  "keywords": [
    "cloudflare",
    "workers",
    "websocket",
    "sync",
    "real-time"
  ],
  "author": "Mirubato Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "typescript": "~5.8.3",
    "wrangler": "^4.20.5"
  },
  "dependencies": {
    "jose": "6.0.12",
    "zod": "4.0.17"
  }
}
