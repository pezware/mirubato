{
  "name": "mirubato-tutorial",
  "version": "1.0.0",
  "description": "Tutorial videos for Mirubato using Remotion",
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion bundle",
    "render": "remotion render",
    "still": "remotion still",
    "type-check": "tsc --noEmit",
    "capture": "cd ../frontendv2 && npx playwright test --config=playwright-screenshots.config.ts",
    "render:video": "remotion render src/index.ts MirubatoIntro out/mirubato-tutorial.mp4",
    "generate": "npm run capture && npm run render:video"
  },
  "dependencies": {
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
