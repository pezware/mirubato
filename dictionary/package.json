{
  "name": "@mirubato/dictionary",
  "version": "1.8.0",
  "description": "Music Dictionary Service - AI-powered music terminology definitions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev --port 9799 --env local --local-protocol http",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:staging": "wrangler d1 migrations apply DB --env staging --remote",
    "db:migrate:production": "wrangler d1 migrations apply DB --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest --coverage",
    "test:api": "curl http://dictionary-mirubato.localhost:9799/health | jq",
    "test:language": "tsx test-language-support.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.10",
    "@hono/zod-validator": "^0.7.2",
    "@mirubato/workers-utils": "workspace:*",
    "axios": "^1.12.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.11.7",
    "jose": "^5.10.0",
    "nanoid": "^5.1.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250726.0",
    "@eslint/js": "^9.25.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^4.0.10",
    "wrangler": "^4.61.1"
  },
  "engines": {
    "node": ">=18"
  }
}
