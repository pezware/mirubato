    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^1.0.0",
    "wrangler": "^4.20.5"
