{
  "name": "mirubato",
  "private": true,
  "version": "1.8.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "frontendv2",
    "api",
    "scores",
    "dictionary",
    "sync-worker"
  ],
  "scripts": {
    "dev": "pnpm --filter @mirubato/frontendv2 run dev",
    "dev:api": "pnpm --filter @mirubato/api run dev",
    "dev:sync": "pnpm --filter @mirubato/sync-worker run dev",
    "dev:scorebook": "bash -lc 'set -euo pipefail; cleanup() { echo; echo \"Stopping Mirubato scorebook services...\"; kill $(jobs -p) 2>/dev/null || true; }; trap cleanup EXIT INT TERM; echo \"Starting Mirubato scorebook services...\"; echo; (cd api && wrangler dev --port 9797 --env local --local-protocol http) & (cd scores && wrangler dev --port 9788 --env local --local-protocol http) & sleep 5; (cd scores && pnpm run upload:real-pdfs); (cd frontendv2 && pnpm run dev) & wait'",
    "build": "pnpm -r run build",
    "build:frontend": "pnpm --filter @mirubato/frontendv2 run build",
    "build:api": "pnpm --filter @mirubato/api run build",
    "build:sync": "pnpm --filter @mirubato/sync-worker run build",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r --workspace-concurrency=2 run test",
    "test:unit": "pnpm -r --workspace-concurrency=2 run test:unit",
    "test:integration": "pnpm -r --workspace-concurrency=2 run test:integration",
    "test:memory": "NODE_OPTIONS='--max-old-space-size=1024 --expose-gc' pnpm -r --workspace-concurrency=1 run test:unit",
    "test:coverage": "pnpm -r run test:coverage",
    "docs:generate": "echo 'Documentation generation not implemented yet'",
    "format": "prettier --write .",
    "prepare": "node -e \"try { require.resolve('husky'); require('child_process').execSync('husky install', {stdio: 'inherit'}); } catch (e) { console.log('Skipping husky install'); }\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.56.1",
    "@types/ws": "8.18.1",
    "diff-sequences": "^29.6.3",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.0",
    "merge-stream": "^2.0.0",
    "prettier": "^3.5.3",
    "rollup": "^4.44.0",
    "wrangler": "^4.61.1",
    "ws": "8.18.3"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "async-mutex": "0.5.0",
    "uuid": "^11.1.0"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "darwin",
        "linux"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    },
    "overrides": {
      "glob": "^11.1.0",
      "esbuild@0.18.20": "^0.25.0",
      "js-yaml": "^4.1.1",
      "@isaacs/brace-expansion": ">=5.0.1",
      "undici": ">=7.18.2"
    }
  }
}
