{
  "name": "mirubato",
  "private": true,
  "version": "1.7.0",
  "type": "module",
  "workspaces": [
    "frontendv2",
    "api",
    "scores",
    "dictionary"
  ],
  "scripts": {
    "dev": "pnpm --filter @mirubato/frontendv2 run dev",
    "dev:api": "pnpm --filter @mirubato/api run dev",
    "build": "pnpm -r run build",
    "build:frontend": "pnpm --filter @mirubato/frontendv2 run build",
    "build:api": "pnpm --filter @mirubato/api run build",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "test:unit": "pnpm -r run test:unit",
    "test:integration": "pnpm -r run test:integration",
    "test:coverage": "pnpm -r run test:coverage",
    "docs:generate": "echo 'Documentation generation not implemented yet'",
    "format": "prettier --write .",
    "prepare": "node -e \"try { require.resolve('husky'); require('child_process').execSync('husky install', {stdio: 'inherit'}); } catch (e) { console.log('Skipping husky install'); }\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.1",
    "diff-sequences": "^29.6.3",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.0",
    "merge-stream": "^2.0.0",
    "prettier": "^3.5.3",
    "rollup": "^4.44.0",
    "wrangler": "^4.20.5"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "async-mutex": "0.5.0",
    "uuid": "^11.1.0"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "darwin",
        "linux"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    },
    "overrides": {
      "esbuild@0.18.20": "^0.25.0"
    }
  }
}
