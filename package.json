{
  "name": "mirubato",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "shared",
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev -w @mirubato/frontend",
    "dev:backend": "npm run dev -w @mirubato/backend",
    "build": "npm run build -w @mirubato/backend",
    "build:frontend": "npm run build -w @mirubato/frontend",
    "build:backend": "npm run build -w @mirubato/backend",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "codegen": "npm run codegen -w @mirubato/frontend",
    "codegen:watch": "npm run codegen:watch -w @mirubato/frontend",
    "codegen:check": "./scripts/check-graphql-drift.sh",
    "prepare": "node -e \"try { require.resolve('husky'); require('child_process').execSync('husky install', {stdio: 'inherit'}); } catch (e) { console.log('Skipping husky install'); }\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "wrangler": "^4.18.0"
  }
}
