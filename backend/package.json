{
  "name": "@mirubato/backend",
  "version": "0.1.0",
  "description": "GraphQL backend for Mirubato sight-reading platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev --env local",
    "build:dev": "node build-with-lock.js --dev",
    "prebuild": "node scripts/update-version.js",
    "build": "node build.js",
    "build:templates": "node scripts/build-email-templates.js",
    "build:with-templates": "npm run build:templates && tsc",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:uat": "vitest run --config vitest.config.ts src/__tests__/integration/d1-uat.test.ts",
    "test:uat:watch": "vitest --config vitest.config.ts src/__tests__/integration/d1-uat.test.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:generate": "wrangler d1 migrations create",
    "db:migrate": "wrangler d1 migrations apply DB --env local --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:migrate:dev": "wrangler d1 migrations apply DB --env dev --remote",
    "db:migrate:staging": "wrangler d1 migrations apply DB --env staging --remote",
    "db:migrate:production": "wrangler d1 migrations apply DB --env production --remote",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/cloudflare-workers": "^0.1.1",
    "@mirubato/shared": "*",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0",
    "wrangler": "^4.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
