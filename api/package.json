{
  "name": "@mirubato/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --env local --local",
    "build": "tsc --noEmit -p tsconfig.build.json",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "test": "vitest",
    "test:unit": "vitest run --passWithNoTests --exclude='**/*.integration.test.ts'",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:staging": "wrangler d1 migrations apply DB --env staging",
    "db:migrate:production": "wrangler d1 migrations apply DB",
    "migrate:sync": "tsx scripts/migrate-backend-to-sync-data.ts",
    "migrate:sync:dry": "tsx scripts/migrate-backend-to-sync-data.ts --dry-run",
    "migrate:sync:staging": "tsx scripts/migrate-backend-to-sync-data.ts --env staging",
    "migrate:sync:production": "tsx scripts/migrate-backend-to-sync-data.ts --env production",
    "migrate:test": "tsx scripts/test-migration.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@sendgrid/mail": "^8.1.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "merge-stream": "^2.0.0",
    "miniflare": "^3.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^4.20.5"
  }
}
