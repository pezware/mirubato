{
  "name": "@mirubato/scores",
  "version": "1.6.0",
  "description": "Scores service for mirubato - handles sheet music storage, processing, and delivery",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev --port 9788 --env local --local-protocol http",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:staging": "wrangler d1 migrations apply DB --env staging --remote",
    "db:migrate:production": "wrangler d1 migrations apply DB --remote",
    "seed:dev": "wrangler d1 execute DB --local --file seeds/development/0001_test_scores.sql",
    "seed:staging": "wrangler d1 execute DB --env staging --remote --file seeds/staging/0001_demo_scores.sql",
    "seed:production": "echo 'WARNING: Use seed:production:confirm to seed production data'",
    "seed:production:confirm": "wrangler d1 execute DB --env production --remote --file seeds/production/0001_initial_catalog.sql",
    "seed:local": "./scripts/seed-test-scores.sh",
    "seed:r2": "./scripts/seed-r2-miniflare.sh",
    "upload:real-pdfs": "node scripts/upload-real-pdfs.js",
    "test": "vitest",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest --coverage",
    "test:api": "curl http://scores-mirubato.localhost:9788/api/scores | jq",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "scores",
    "sheet-music"
  ],
  "author": "Mirubato Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.11.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.20.5"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^0.0.11",
    "@google/generative-ai": "^0.24.1",
    "aws4fetch": "^1.0.20",
    "hono": "^4.6.13",
    "jose": "^5.2.0",
    "nanoid": "^5.0.4",
    "pdfjs-dist": "^5.3.31",
    "zod": "^3.22.4"
  }
}
